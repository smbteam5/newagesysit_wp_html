# Cache control for better performance and reduced bandwidth on repeat visits
# Estimated savings: ~118 KiB (primarily from SVG assets on repeated visits)

<IfModule mod_expires.c>
  ExpiresActive On

  # Images: Cache for 1 year (longest reasonable for static assets)
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/vnd.microsoft.icon "access plus 1 year"

  # CSS and JavaScript
  ExpiresByType text/css "access plus 6 months"
  ExpiresByType application/javascript "access plus 6 months"
  ExpiresByType text/javascript "access plus 6 months"

  # Web fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"

  # Default: Cache everything else for 30 days
  ExpiresDefault "access plus 30 days"
</IfModule>

<IfModule mod_headers.c>
  # Cache control headers (for better browser caching and CDN consistency)
  
  # Images: 1 year cache
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|x-icon)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>

  # CSS and JavaScript: 6 months
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=15552000"
  </FilesMatch>

  # Fonts: 1 year cache
  <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>

  # HTML: Short cache (1 hour) to ensure updates are fetched
  <FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>
</IfModule>

# Gzip compression for faster delivery
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>
